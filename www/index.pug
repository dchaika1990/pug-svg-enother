doctype html
html
    head
        style
            include ./styles/style.css
    body
        include svg

        block content

            - var classik = true;
            div
                p(class=classik ? 'green' : '') This is example <span class='red'>text</span> and so <a href='#'>this is link</a>

            hr
            form(novalidate)
                label checkbox
                    input(
                        type='checkbox'
                        name='checkbox'
                        checked
                    )

            hr
            - var url = 'pug-test.html';
            p
                a(href='/' + url) Link

            - var url2 = 'https://example.com/';
            p
                a(href=url2) Another Link

            hr

            - var classes = ['foo','bar','baz'];
            p
                a(class=classes) Link
            p
                a.bang(class=classes class='bing') Another link
            - var one = true;
            - var two = false;
            - var three = 2;
            p
                a(class=[(one ? '1':'2'),(two ? '3':'4'),(three >= 2 ? '5' : '6')] href='javascript:void(0)') Another link

            hr

            - var friends = 0;
            case friends
                when 0
                    p you have no friends
                when 1
                    p you have a friend
                default
                    p you have #{friends} friends

            hr

            ul
                each val, index in ['zero','one','two']
                    li #{index + 1}: #{val}
            ul
                - var arr = ['zero','one','two'];
                each val, index in arr
                    li= (index + 1) + ': ' + val

            ul
                - var values = [];
                for val in values
                    li There is value - #{val}
                else
                    li='There are no values'

            ul
                - var n = 0;
                while n < 5
                    li= n++

            hr

            ul
                - for (var x = 0; x < 5; x++)
                    li #{x + 1}: item

            hr

            - var user = { description: '' }
            - var authorised = true

            #user
                if user.description
                    h2.green Description
                    p.description= user.description
                else if authorised
                    h2.blue Description
                    p.description.
                        User has no description,
                        why not add one...
                else
                    h2.red Description
                    p.description User has no description

            hr

            mixin pet(name)
                li.pet= name

            ul
                +pet('cat')
                +pet('dog')
                +pet('mouse')

            hr

            mixin article(title)
                .article
                    .article__wrapper
                        h1= title
                        if block
                            block
                        else
                            p No content provided


            +article('Hello world')

            +article('Hi')
                p This is my
                p Amazing article